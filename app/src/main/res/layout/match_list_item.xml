<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/match_list_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/match_list_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="@dimen/padding_medium"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_large" />

            <EditText
                android:id="@+id/match_list_player_a"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_weight="2"
                android:background="@drawable/match_edittext"
                android:padding="@dimen/padding_small"
                android:text="김권수"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/match_list_player_b"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/match_edittext"
                android:padding="@dimen/padding_small"
                android:text="김권수"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/match_list_vs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="@dimen/padding_medium"
                android:text="vs"
                android:textAlignment="center"
                android:textColor="@color/trans_black_50"
                android:textSize="@dimen/text_medium" />

            <EditText
                android:id="@+id/match_list_player_c"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_weight="2"
                android:background="@drawable/match_edittext"
                android:padding="@dimen/padding_small"
                android:text="김권수"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/match_list_player_d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_weight="2"
                android:background="@drawable/match_edittext"
                android:padding="@dimen/padding_small"
                android:text="김권수"
                android:textAlignment="center" />


        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/add_list_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1A4B89DC"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/add_list_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="@dimen/padding_large"
                android:text="+"
                android:textColor="@color/main"
                android:textSize="@dimen/text_large"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#26000000"
                app:layout_constraintTop_toBottomOf="@id/add_list_button" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#26000000"
            app:layout_constraintTop_toBottomOf="@id/match_list_info" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
